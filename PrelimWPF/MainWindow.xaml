<Window x:Class="PrelimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrelimWPF"
        mc:Ignorable="d"
        Title="Menu" Height="533" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Backg2.jpg"/>
    </Window.Background>
    <Grid>
        <Button x:Name="btnPlay" Content="Play" HorizontalAlignment="Center" Margin="0,242,0,0" VerticalAlignment="Top" Height="57" Width="365" FontSize="30" Click="btnPlay_Click" FontFamily="Bernard MT Condensed"/>
        <Button x:Name="btnLeaderboards" Content="Leaderboards" HorizontalAlignment="Center" Margin="0,309,0,0" VerticalAlignment="Top" Height="56" Width="364" FontSize="30" Click="btnLeaderboards_Click" FontFamily="Bernard MT Condensed"/>
        <Label Content="8-Bit Binary" HorizontalAlignment="Center" Margin="0,54,0,0" VerticalAlignment="Top" FontSize="128" FontFamily="Bernard MT Condensed"/>
        <Button x:Name="btnRules" Content="Rules" HorizontalAlignment="Center" Margin="0,376,0,0" VerticalAlignment="Top" Height="56" Width="364" FontSize="30" Click="btnRules_Click" FontFamily="Bernard MT Condensed"/>
    </Grid>
</Window>
