<Window x:Class="PrelimWPF.Leaderboards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrelimWPF"
        mc:Ignorable="d"
        Title="Leaderboards" Height="533" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Backg2.jpg"/>
    </Window.Background>
    <Grid>
        <ListBox x:Name="lbLeaderboards" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="59,109,59,108" Height="300" FontSize="30" IsHitTestVisible="False" FontFamily="Bell MT" Background="#FF6EDEDB" BorderBrush="#FF204DD6"/>
        <Label Content="Leaderboards" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Bernard MT Condensed"/>
        <Button x:Name="btnBack" Content="Back" Margin="698,426,0,0" FontSize="20" Click="BtnExit_Click" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Width="68"/>

    </Grid>
</Window>
